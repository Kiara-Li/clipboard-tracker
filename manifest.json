{
  "manifest_version": 3,
  "name": "Clipboard Forest",
  "version": "1.1",
  "description": "Visualizes your copied history as a geometric forest.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipboard Forest"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}